// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Map {
  id     Int     @id @default(autoincrement())
  paused Boolean @default(false)
  cells  Cell[]
  width  Int
  height Int
  map InGame[]
}

model Cell {
  id     Int      @id @default(autoincrement())
  x      Int
  y      Int
  type   CellType
  map    Map      @relation(fields: [mapId], references: [id])
  mapId  Int
  land   Land?
}

model Land {
  id     Int @id  @unique
  minted Boolean
  Cell   Cell @relation(fields: [cellId], references: [id])
  cellId Int  @unique
  inGame InGame?
}

model InGame {
   id Int @id @default(autoincrement())
   tower Tower @relation(fields: [towerId], references: [id])
   towerId Int @unique
   land Land @relation(fields: [landId], references: [id])
   landId Int @unique
   map Map @relation(fields: [mapId], references: [id])
   mapId Int @unique
}

model Tower {
  id Int @id  @unique
  damage  Int
  speed Int
  level Int @default(1)
  type TowerType
  inGame InGame?
}

enum TowerType {
  REGULAR
  FIRE
}

enum CellType {
  PATH // the road anemies walk in
  LAND // a land
  ROCK // an empty block like a rock
  SPAWN // where ennemies spawn
  BASE // where ennemies goes
}
